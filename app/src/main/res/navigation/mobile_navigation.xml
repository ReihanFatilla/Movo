<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.reift.movo.presentation.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_search"
            app:destination="@id/navigation_search" />
        <action
            android:id="@+id/action_navigation_home_to_allMovieTvFragment"
            app:destination="@id/allMovieTvFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.reift.movo.presentation.favorite.FavoriteFragment"
        android:label="@string/favorite"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.reift.movo.presentation.search.SearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/allMovieTvFragment"
        android:name="com.reift.movo.presentation.allmovietv.AllMovieTvFragment"
        android:label="fragment_all_movie_tv"
        tools:layout="@layout/fragment_all_movie_tv"  >
        <argument
            android:name="category"
            app:argType="string"
            android:defaultValue="now_playing" />
        <argument
            android:name="totalPages"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>

</navigation>
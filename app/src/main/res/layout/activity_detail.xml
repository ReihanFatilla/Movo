<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.detail.DetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_carousel_home">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:contentScrim="@color/app_backround"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_backround">

                <ImageView
                    android:id="@+id/img_poster"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:foreground="@drawable/black_shadow"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_movie_poster"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="-98dp" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:maxLines="2"
                    android:layout_marginBottom="-6dp"
                    android:text="Cars on the Road"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_poster"/>

                <TextView
                    android:id="@+id/tv_release_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:text="2h 24min"
                    android:textColor="@color/gray_text"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="@id/cv_dot"
                    app:layout_constraintBottom_toBottomOf="@id/cv_dot"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/cv_dot" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_dot"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/gray_text"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintEnd_toStartOf="@+id/tv_release_data"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tv_duration_or_episode" />

                <TextView
                    android:id="@+id/tv_duration_or_episode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:text="16 Desember 2022"
                    android:textColor="@color/gray_text"
                    android:textSize="15sp"
                    app:layout_constraintTop_toTopOf="@id/cv_dot"
                    app:layout_constraintBottom_toBottomOf="@id/cv_dot"
                    app:layout_constraintEnd_toStartOf="@+id/cv_dot"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_genre_detail"
                    tools:itemCount="3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_dot" />

                <LinearLayout
                    android:id="@+id/ll_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="@id/view_line"
                    app:layout_constraintBottom_toBottomOf="@id/view_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view_line"
                    >

                    <ImageView
                        android:id="@+id/ic_favorite"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_favorite" />

                    <TextView
                        android:id="@+id/tv_add_or_remove_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Add To Favorite"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="3dp"
                    android:layout_height="50dp"
                    android:background="@color/dark_grey"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_genre"
                     />

                <LinearLayout
                    android:id="@+id/ll_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="@id/view_line"
                    app:layout_constraintBottom_toBottomOf="@id/view_line"
                    app:layout_constraintEnd_toStartOf="@+id/view_line"
                    app:layout_constraintStart_toStartOf="parent"
                    >

                    <ImageView
                        android:id="@+id/ic_stars"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_stars" />

                    <TextView
                        android:id="@+id/tv_rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="4.7"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/yellow_star"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_raters_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="(4284)"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/gray_text"
                        android:textSize="15sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginTop="40dp"
                app:navigationIconTint="@color/white"
                android:theme="?attr/actionBarTheme"
                app:layout_collapseMode="pin"
                />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@color/app_backround">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="24dp"
            android:clipToPadding="false"
            android:layout_marginBottom="40dp">


            <TextView
                android:id="@+id/tv_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="When Gru retires, Kevin, Stuart and Bob decide to find a new master. They travel the world and finally meet Scarlett Overkill, a female super villain who intends to rule the world."
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/light_grey"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginStart="-22dp"
                android:layout_marginEnd="-22dp"
                android:background="@color/dark_grey"
                app:layout_constraintTop_toBottomOf="@id/tv_overview"
                app:layout_constraintBottom_toTopOf="@id/tv_actor"/>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginStart="-22dp"
                android:layout_marginEnd="-22dp"
                android:background="@color/dark_grey"
                app:layout_constraintTop_toBottomOf="@id/rv_credits"
                app:layout_constraintBottom_toTopOf="@id/tv_similar"/>

            <TextView
                android:id="@+id/tv_similar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Similar Movies"
                app:layout_constraintTop_toBottomOf="@id/rv_credits"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_similar_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See what's similar to this movies"
                app:layout_constraintTop_toBottomOf="@id/tv_similar"
                android:textColor="@color/light_grey"
                android:textStyle="bold"
                android:textSize="13sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_similar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="-24dp"
                android:layout_marginEnd="-24dp"
                app:layout_constraintTop_toBottomOf="@id/tv_similar_desc"
                tools:listitem="@layout/item_horizontal_movie"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal" />

            <View
                android:id="@+id/view_line2"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginStart="-22dp"
                android:layout_marginEnd="-22dp"
                android:background="@color/dark_grey"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/rv_similar"
                app:layout_constraintBottom_toTopOf="@id/rv_reviews"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_reviews"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_marginStart="-24dp"
                android:layout_marginEnd="-24dp"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_review_detail"
                app:layout_constraintTop_toBottomOf="@id/view_line2"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
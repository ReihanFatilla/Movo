<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_backround"
    android:clickable="true"
    android:layout_marginTop="24dp"
    android:focusable="true">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_poster"
        android:layout_width="105dp"
        android:layout_height="135dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_movie_poster" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Cars on the road"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:maxLines="2"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toEndOf="@id/cv_poster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_genre"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/tv_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Animation, Comedy, Family"
        android:textColor="@color/gray_text"
        android:textSize="11sp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@+id/ll_rating"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        />

    <LinearLayout
        android:id="@+id/ll_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_genre">

        <ImageView
            android:id="@+id/stars_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_stars_inactive" />

        <ImageView
            android:id="@+id/stars_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_stars_inactive" />

        <ImageView
            android:id="@+id/stars_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_stars_inactive" />

        <ImageView
            android:id="@+id/stars_4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_stars_inactive"/>

        <ImageView
            android:id="@+id/stars_5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_stars_inactive" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>